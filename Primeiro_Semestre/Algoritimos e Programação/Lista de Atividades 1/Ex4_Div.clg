algoritmo Ex4_Lista1_Div;
// Síntese
//  Objetivo:  Mostar o resto e o quociente a partir de números dados pelo usuário
//  Entrada :  n1, n2
//  Saída   :  resto, quociente


principal
	// Declarações
	inteiro n1;
	inteiro n2;
	// Instruções
	escreva("> Indique o valor do dividendo: ");
	leia(n1);
	escreva("> Indique o valor do divisor: ");
	leia(n2);
	escreval("> Divisão: ",n1,"\",n2);
	escreval("> Quociente da divisão: ",n1\n2);
	escreva("> Resto da divisão: ",n1%n2);
fimPrincipal
