algoritmo Ex1_Lista1_Horas;
// Síntese
//  Objetivo:  Converter um valor em horas para segundos e minutos
//  Entrada :  Horas
//  Saída   :  Segundos, Minutos


principal
	// Declarações
	inteiro Horas;
	// Instruções
	escreva("Que Horas são? ");
	leia(Horas);
	escreval(Horas," Horas em minutos são: ", Horas*60, " minutos.");
	escreval(Horas," Horas em segundos são: ", Horas*3600, " segundos.");
fimPrincipal
